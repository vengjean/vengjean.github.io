journal = {Medical Physics},
keywords = {collapsed cone,convolution,dose planning,photon dosimetry,point spread function},
number = {4},
pages = {577--592},
pmid = {2770632},
title = {{Collapsed cone convolution of radiant energy for photon dose calculation in heterogeneous media}},
volume = {16},
year = {1989}
}
